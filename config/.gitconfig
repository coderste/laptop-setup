[user]
    name = Stephen Hinett
    email = me@stephenhinett.co.uk

[core]
    excludesFile = ~/.gitignore
    editor = nvim
    hooksPath = /Users/stephenhinett/.git-hooks
    pager = diff-so-fancy | less --tabs=4 -RF

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[interactive]
    diffFilter = diff-so-fancy --patch

[commit]
    gpgsign = true

[gpg]
    format = ssh

[gpg "ssh"]
    program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
    defaultKeyCommand = ssh-add -L

[includeIf "hasconfig:remote.*.url:*bitbucket.org:cityfibre*/**"]
    path = ~/.gitconfig-work

[includeIf "hasconfig:remote.*.url:*github.com:coderste*/**"]
    path = ~/.gitconfig-personal

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff

[difftool]
    prompt = false

[mergetool]
    prompt = false

[push]
    default = current
    autoSetupRemote = true

[pull]
    rebase = true

[init]
    defaultBranch = main

[branch]
    autosetuprebase = always

[rebase]
    autoStash = true

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
